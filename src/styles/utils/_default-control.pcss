input,
select {
  appearance: none;
  background-color: transparent;
  border: 0;
  border-radius: 0;
  outline: 0;
}

::-webkit-input-placeholder {
  color: #888;
  font-family: "Arial";
  opacity: 1;
}

::-moz-placeholder,
input::-moz-placeholder {
  color: #888;
  font-family: "Arial";
  opacity: 1;
}

:-ms-input-placeholder {
  color: #888;
  font-family: "Arial";
}
