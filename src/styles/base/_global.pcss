body, html {
  height: 100%;
}

body {
  &, h1 {
    margin: 0;
  }
  text-align: center;
  background-image: url(../images/image_big.png);
  background-position: center center;
  background-size: contain;
  background-repeat: repeat;
  display: flex;
  justify-content: center;
  align-items: center;
}

div:matches(:global(#root)) {
  &:hover {
    border: 4px solid #9d9c;
  }
}
