{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:jsx-a11y/recommended"],

  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],

  // Allow the following global variables
  "env": {
    // Node.js global variables and Node.js scoping.
    "node": true,
    "browser": true
  },

  "parserOptions": {
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },

  "rules": {
    "strict": [2, "safe"],

    /**
     * ES6
     */
    "prefer-const": 0,

    /**
     * Variables
     */
    "no-shadow": [2, {
      "builtinGlobals": true
    }],
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "after-used"
    }],
    "no-use-before-define": [2, "nofunc"],

    /**
     * Possible errors
     */
    "comma-dangle": [2, "never"],
    "no-inner-declarations": [2, "both"],

    /**
     * Best practices
     */
    "object-shorthand": [1, "always", { "avoidQuotes": true }],
    "consistent-return": 0,
    "curly": 2,
    "dot-notation": [2, {
      "allowKeywords": true,
      "allowPattern": "^[a-z]+(_[a-z]+)+$"
    }],
    "eqeqeq": [2, "allow-null"],
    "no-eq-null": 0,
    "no-redeclare": [2, {
      "builtinGlobals": true
    }],
    "wrap-iife": [2, "inside"],
    "max-len": [2, 130, 2, {"ignoreUrls": true}],
    "class-methods-use-this": 0,

    /**
     * Style
     */
    "indent": [2, 2, {
      "VariableDeclarator": {
        "var": 2,
        "let": 2,
        "const": 3
      },
      "SwitchCase": 1
    }],
    "quote-props": 1,
    "func-names": 0,
    "no-multiple-empty-lines": [2, {
      "max": 1
    }],
    "no-extra-parens": [2, "functions"],
    "one-var": 0,
    "space-before-function-paren": [2, "never"],
    "no-underscore-dangle": 0,
    "no-useless-constructor": 0,
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],

    /**
     * jsx-a11y
    */
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "jsx-a11y/click-events-have-key-events": "off",

    /**
     * Import
     */
    "import/extensions": ["error", { "jsx": "always", "scss": "always", "sass": "always", "css": "always" }],

    /**
     * JSX
     */
    "react/jsx-closing-bracket-location": [2, {
      "location": "tag-aligned"
    }],
    "react/jsx-curly-spacing": [2, "never", {
      "allowMultiline": false
    }],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-no-duplicate-props": [2, {
      "ignoreCase": false
    }],
    "react/prop-types": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/sort-comp": [2, {
      "order": [
        "static-methods",
        "lifecycle",
        "/^(get|set)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
        "/^on.+$/",
        "/^handle.+$/",
        "everything-else",
        "/^render.+$/",
        "render"
      ]
    }],

    /**
     *  Import plugin
     */
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": true, "peerDependencies": false}]
  }
}
